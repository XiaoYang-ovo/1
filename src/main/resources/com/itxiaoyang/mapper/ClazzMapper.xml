<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itxiaoyang.mapper.ClazzMapper">

    <!--根据id更新班级-->
    <!--  set标签：自动生成set关键字，删除多余的,-->
    <update id="updateById">
        UPDATE clazz
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="room != null and room != ''">room = #{room},</if>
            <if test="beginDate != null">begin_date = #{beginDate},</if>
            <if test="endDate != null">end_date = #{endDate},</if>
            <if test="masterId != null">master_id = #{masterId},</if>
            <if test="subject != null">subject = #{subject},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="list" resultType="com.itxiaoyang.pojo.Clazz">
        select c.*,e.name deptName from clazz c left join emp e on c.master_id = e.id
        <where>
            <if test="name != null and name != ''">
                c.name like concat('%',#{name},'%')
            </if>
            <if test="begin != null and end != null">
                and c.entry_date between #{begin} and #{end}
            </if>
        </where>order by c.update_time desc
    </select>


    <select id="getById" resultType="com.itxiaoyang.pojo.Clazz">
        select * from clazz where id = #{id}
    </select>


</mapper>